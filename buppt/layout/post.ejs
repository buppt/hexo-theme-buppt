<div class="container">
        <div class="row">
            <main class="col-md-9">
		    <article class="post">
		      <div class="post-head">
			<a class="post-title"><%= page.title %></a>
		        <div class="post-meta">
                            <span>作者：<%= config.author %></span>  
			    <span class="post-time"><%- date(page.date, "YYYY-MM-DD") %></span>
		        </div>
		      </div>
		      <div class="post-content">
			<%- page.content %>
		      </div>
		    </article>
	     </main>
	</div>
</div>
